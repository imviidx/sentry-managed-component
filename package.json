{
  "name": "@managed-components/sentry",
  "version": "0.0.15",
  "description": "Draft version of Sentry Managed Component",
  "main": "components/sentry-managed-component/index.js",
  "scripts": {
    "lint": "eslint --ext .ts,.js, src/",
    "lint:fix": "eslint --ext .ts,.js, src/ --fix",
    "bundle": "node esbuild.js",
    "build": "npm run lint && npm run typecheck && npm run bundle",
    "release": "npm run build && npm version patch && npm publish",
    "typecheck": "tsc --project tsconfig.build.json --noEmit",
    "publish": "npm run build && npm version patch && npx managed-component-to-cloudflare-worker ./components/sentry-managed-component/index.js sentry-managed-component",
    "demo:dev": "vite demo --config demo/vite.config.ts",
    "demo:build": "vite build demo --config demo/vite.config.ts",
    "demo:preview": "vite preview demo --config demo/vite.config.ts",
    "demo:webcm": "npx webcm --config ./demo/webcm.config.js",
    "demo:webcm:dev": "node esbuild.watch.js & npx webcm --config ./demo/webcm.config.js",
    "bundle:watch": "node esbuild.watch.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/POD666/sentry-managed-component.git"
  },
  "keywords": [
    "webcm",
    "managed-components",
    "demo"
  ],
  "author": "POD666",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/POD666/sentry-managed-component/issues"
  },
  "homepage": "https://github.com/POD666/sentry-managed-component#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@managed-components/types": "^1.3.1",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^4.7.0",
    "all-contributors-cli": "^6.20.0",
    "esbuild": "^0.14.42",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^5.1.0",
    "vitest": "^0.13.0"
  },
  "dependencies": {
    "@sentry/react": "^10.5.0",
    "@sentry/tracing": "^7.120.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zaraz": "^2.0.0"
  }
}
